{%extends 'KevinCatalogueBundle::layout.html.twig'%}

{% block body %}
    <h1>Article list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('Catarticle_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.titre }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.prix }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('Catarticle_show', { 'id': article.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('Catarticle_edit', { 'id': article.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('Catarticle_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
